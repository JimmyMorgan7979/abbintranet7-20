<div class="row mt-3">
    <div class="col-sm">
        <!--Spacing--> 
    </div>
    <div class="col-sm-6">
        <div class="text-center mb-4 h5">Search results for "<%=search.searchWord%>"
            <ol class="list-unstyled">
                <% docs.forEach(function(item){%>
                    <li class="my-4 text-left">
                            <strong>Stocked As: </strong class="pr-2"><%= item.stockedAS %> </br>
                            <% if (item.description1) { %>
                                <strong class="pr-2">Description: </strong> <%= item.description1 %><br>
                            <% } %>
                            <% if (item.description2) { %>
                                <strong class="pr-2">Description 2: </strong> <%= item.description2 %><br>
                            <% } %>
                            <% if (item.manufacturer) { %>
                                <strong class="pr-2">Manufacturer: </strong> <%= item.manufacturer %><br>
                            <% } %>
                            <% if (item.sapNumber) { %>
                                <strong class="pr-2">SAP Number: </strong> <%= item.sapNumber %><br>
                            <% } %>
                            <% if (item.location1) { %>
                                <strong class="pr-2">Location 1: </strong> <%= item.location1 %><br>
                            <% } %>
                            <% if (item.location2) { %>
                                <strong class="pr-2">Location 2: </strong> <%= item.location2 %><br>
                            <% } %>
                            <% if (item.location3) { %>
                                <strong class="pr-2">Location 3: </strong> <%= item.location3 %><br>
                            <% } %>
                            <% if (item.drawer) { %>
                                <strong class="pr-2">Drawer: </strong> <%= item.drawer %><br>
                            <% } %>
                            <% if (item.cross1) { %>
                                <strong class="pr-2">Cross 1: </strong> <%= item.cross1 %><br>
                            <% } %>
                            <% if (item.cross2) { %>
                                <strong class="pr-2">Cross 2: </strong> <%= item.cross2 %><br>
                            <% } %>
                            <% if (item.cross3) { %>
                                <strong class="pr-2">Cross 3: </strong> <%= item.cross3 %><br>
                            <% } %>
                            <% if (item.price) { %>
                                <strong class="pr-2">List Price: </strong> <%= item.price %><br>
                            <% } %>
                            <% if (item.priceUpdated) { %>
                                <strong class="pr-2">Price Updated On: </strong> <%= item.priceUpdated %><br>
                            <% } %>
                            <% if (item.notes) { %>
                                <strong class="pr-2">Notes: </strong> <%= item.notes %><br>
                            <% } %>
                    </li>
                <% }); %>
            </ol>
        <div>
            <a class="btn btn-secondary mt-4 text-white" href="/partHome">Go Back to Parts Search</a>
        </div>
        </div>
        
    </div>
    <div class="col-sm">
        <!--Spacing--> 
    </div>
</div>